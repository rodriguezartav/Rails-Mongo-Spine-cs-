= form_for @bee do |f|
  -if @bee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bee.errors.count, "error")} prohibited this bee from being saved:"
      %ul
        - @bee.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password
    = f.text_field :password
  .actions
    = f.submit 'Save'
